<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/bottomNavigationView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D6F0FF"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:elevation="4dp"
                android:layout_marginHorizontal="8dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_user"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvNamaPengguna"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Hai, Azmi!"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- Ikon Notifikasi -->
                <FrameLayout
                    android:id="@+id/notifikasiContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iconNotifikasi"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        android:contentDescription="Notifikasi" />

                    <TextView
                        android:id="@+id/badgeNotifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="16dp"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="1"
                        android:layout_gravity="end|top"
                        android:layout_marginTop="-4dp"
                        android:layout_marginEnd="-4dp"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>

            <!-- Lingkaran Progress -->
            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_marginBottom="16dp">

                <ProgressBar
                    android:id="@+id/progress_pakan"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="20"
                    android:progressDrawable="@drawable/circular_progress_blue" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:elevation="4dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_persen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20%"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš  Sisa Pakan Ikan"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="20dp" />

            <!-- Tombol Jadwal yang akan datang -->
            <Button
                android:id="@+id/btn_next_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#BDE5FF"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_calendar"
                android:paddingStart="16dp"
                android:text="Jadwal yang akan datang:\n12:00"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:weightSum="4"
        android:elevation="8dp">

        <!-- Beranda -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home_biru" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beranda"
                android:textColor="#2196F3"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Atur Jadwal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/atur_jadwal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atur Jadwal"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Lihat Jadwal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lihat_jadwal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Jadwal"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Profil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
