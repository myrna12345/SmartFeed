<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pakanotomatis">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PakanOtomatis"
        tools:targetApi="31">
        <activity
            android:name=".LihatprofilActivity"
            android:exported="false" />
        <activity
            android:name=".Edit_profil"
            android:exported="false" /> <!-- Activity Dashboard -->
        <activity
            android:name=".DashboardActivity"
            android:exported="true" /> <!-- Tambahkan exported="true" jika ingin Activity ini diakses dari luar -->
        <!-- Activity Lupa Password -->
        <activity
            android:name=".LupaKataSandiActivity"
            android:exported="false" /> <!-- Activity Login -->
        <activity
            android:name=".ActivityLogin"
            android:exported="false" /> <!-- Splash Screen -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.PakanOtomatis">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Activity Atur Jadwal -->
        <activity
            android:name=".AturJadwalActivity"
            android:exported="true" /> <!-- Activity Lihat Jadwal -->
        <activity
            android:name=".LihatJadwalActivity"
            android:exported="true" />
    </application>

</manifest>